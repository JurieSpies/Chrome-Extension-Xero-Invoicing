{
    "manifest_version": 2,
    "name": "Open Vantage Xero Invoicing Plugin",
    "description": "Autofills receipts with cellphone claim information & generate files for emailing",
    "version": "0.1.0",
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://go.xero.com/Expenses/*"
            ],
            "js": [
                "libs/sweetalert2.min.js",
                "libs/xlsx.full.min.js",
                "content/xeroContent.js"
            ]
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "libs/sweetalert2.min.js",
                "content/utils.js",
                "content/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "files/*",
        "images/*"
      ]
}