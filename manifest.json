{
    "manifest_version": 2,
    "name": "Open Vantage Xero invoicing Plugin",
    "description": "Once on Xero invoicing page click this extension to fill up all text fields",
    "version": "0.1.0",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [{
        "matches": ["https://go.xero.com/Expenses/*"],
        "js": ["content.js"]
    }]
}